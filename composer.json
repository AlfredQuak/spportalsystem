{
  "name": "spportalsystem/spportalsystem",
  "description": "Legacy spPortalSystem CMS with Dockerized PHP 8.4 and test setup",
  "type": "project",
  "license": "LGPL-3.0-or-later",
  "require": {
    "php": ">=8.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.3"
  },
  "autoload": {
    "files": [
      "autoload.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit -c tests/phpunit.xml",
    "test:all": [
      "@test"
    ]
  },
  "config": {
    "sort-packages": true
  }
}
